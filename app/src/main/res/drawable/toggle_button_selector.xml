<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true" android:state_enabled="true">
        <layer-list>
            <item android:top="4dp">
                <shape android:dither="true" android:shape="rectangle">
                    <corners android:radius="20dp"/>
                    <solid android:color="#314532"/>
                </shape>
            </item>
            <item android:top="2dp" android:bottom="2dp">
                <shape android:dither="true" android:shape="rectangle">
                    <corners android:radius="20dp"/>
                    <solid android:color="#5C735D"/>
                </shape>
            </item>
        </layer-list>


    </item>


    <item android:state_checked="false" android:state_enabled="true">
        <layer-list>
            <item>
                <shape android:dither="true" android:shape="rectangle">
                    <corners android:radius="20dp"/>
                    <solid android:color="@color/shadowColorAccent"/>
                </shape>
            </item>
            <item android:bottom="4dp">
                <shape android:dither="true" android:shape="rectangle">
                    <corners android:radius="20dp"/>
                    <solid android:color="@color/colorAccent"/>
                </shape>
            </item>

        </layer-list>
    </item>

    <item android:state_enabled="false" >
        <layer-list>
            <item>
                <shape android:dither="true" android:shape="rectangle">
                    <corners android:radius="20dp"/>
                    <solid android:color="#8A978B"/>
                </shape>
            </item>
            <item android:bottom="4dp">
                <shape android:dither="true" android:shape="rectangle">

                    <corners android:radius="20dp"/>
                    <solid android:color="#9BA39B"/>
                </shape>
            </item>

        </layer-list>
    </item>

</selector>